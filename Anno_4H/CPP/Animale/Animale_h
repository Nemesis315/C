#include <string>

#ifndef ANIMALE_H

#define ANIMALE_H

using namespace std;

class Animale
{
    protected:
        int Classificazione;  //1 = Vertebrato, 2 = Invertebrato
		int Sesso;            //0 = Maschio, 1 = Femmina
        int Longevita;
        int Velocita;
        std::string Nome;

	public:
        Animale(int Classificazione, int Sesso, int Longevita, int Velocita, string Nome);
        void setClassificazione(int Classificazione);
        void setSesso(int Sesso);
        void setLongevita(int Longevita);
        void setVelocita(int Velocita);
        void setNome(string Nome);
        int getClassificazione();
        int getSesso();
        int getLongevita();
        int getVelocita();
        string getNome();

        void mangia();
        void dorme();
        void siMuove();	
};

#endif