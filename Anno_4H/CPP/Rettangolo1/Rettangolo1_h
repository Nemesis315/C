#ifndef RETTANGOLO1_H
#define RETTANGOLO1_H

class Rettangolo1_h
{
protected:
    int base;
    int altezza;
public:
    Rettangolo1_h(int base = 1, int altezza = 1);
    void setBase(int base);
    void setAltezza(int altezza);
    int getBase();
    int getAltezza();
    int calcolaArea();
    int calcolaPerimetro();
};

#endif
